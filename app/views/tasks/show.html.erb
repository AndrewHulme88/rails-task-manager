<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<% if @task.completed == true %>
<p>Task is done.</p>
<% else %>
<p>Task is not done</p>
<% end %>

<%= link_to("Edit task", edit_task_path) %>

<%= link_to "Delete",
task_path(@task),
data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to("Return home", root_path) %>
